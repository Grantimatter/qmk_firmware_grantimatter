// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.bin": true,
        "**/*.hex": true,
        "**/*.uf2": true,
        "**/keyboards/[^k]*": true,
        "**/keyboards/k[^e]*": true,
        "**/keyboards/ke[^e]*": true,
        "**/keyboards/kee*[^o]": true,
        "**/keyboards/keebio/[^i]*": true,
        "**/keyboards/keebio/iris/rev1/": true,
        "**/keyboards/keebio/iris/rev1_led/": true,
        "**/keyboards/keebio/iris/rev2/": true,
        "**/keyboards/keebio/iris/rev4/": true,
        "**/keyboards/keebio/iris/rev5/": true,
        "**/keyboards/keebio/iris/rev6/": true,
        "**/keyboards/keebio/iris/rev7/": true,
        "**/keyboards/keebio/iris/rev8/": true,
        "**/keyboards/keebio/iris/keymaps/[^g]*": true,
        "**/keyboards/keebio/iris/keymaps/g[^r]*": true,
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
	    "editor.formatOnSave": false
    },
    "terminal.integrated.defaultProfile.windows": "QMK_MSYS",
    "cmake.configureOnOpen": true
}
